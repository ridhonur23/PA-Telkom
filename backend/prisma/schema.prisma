generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  nik       String   @unique(map: "users_email_key")
  username  String   @unique
  password  String
  fullName  String
  role      Role     @default(SECURITY_GUARD)
  officeId  Int?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  loans     Loan[]
  office    Office?  @relation(fields: [officeId], references: [id])

  @@index([officeId], map: "users_officeId_fkey")
  @@map("users")
}

model Office {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  address   String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  assets    Asset[]
  users     User[]

  @@map("offices")
}

model Category {
  id           Int       @id @default(autoincrement())
  name         String    @unique
  description  String?
  type         AssetType
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  allowedRoles String    @default("ADMIN,SECURITY_GUARD,MANAGEMENT")
  assets       Asset[]

  @@map("categories")
}

model Asset {
  id          Int      @id @default(autoincrement())
  name        String
  code        String   @unique
  description String?
  categoryId  Int
  officeId    Int
  isAvailable Boolean  @default(true)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  category    Category @relation(fields: [categoryId], references: [id])
  office      Office   @relation(fields: [officeId], references: [id])
  loans       Loan[]

  @@index([categoryId], map: "assets_categoryId_fkey")
  @@index([officeId], map: "assets_officeId_fkey")
  @@map("assets")
}

model Loan {
  id                Int        @id @default(autoincrement())
  assetId           Int
  userId            Int
  borrowerName      String
  borrowerPhone     String?
  purpose           String?
  loanDate          DateTime   @default(now())
  returnDate        DateTime?
  actualReturnDate  DateTime?
  status            LoanStatus @default(BORROWED)
  notes             String?
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  isThirdParty      Boolean    @default(false)
  thirdPartyAddress String?
  thirdPartyName    String?
  asset             Asset      @relation(fields: [assetId], references: [id])
  user              User       @relation(fields: [userId], references: [id])

  @@index([assetId], map: "loans_assetId_fkey")
  @@index([userId], map: "loans_userId_fkey")
  @@map("loans")
}

enum Role {
  ADMIN
  SECURITY_GUARD
  MANAGEMENT
}

enum AssetType {
  VEHICLE
  ROOM_KEY
  DEVICE
  OTHER
}

enum LoanStatus {
  BORROWED
  RETURNED
  OVERDUE
}
