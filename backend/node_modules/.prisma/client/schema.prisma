// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique
  password  String
  fullName  String
  role      Role     @default(SECURITY_GUARD)
  officeId  Int?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  office Office? @relation(fields: [officeId], references: [id])
  loans  Loan[]

  @@map("users")
}

model Office {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  address   String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users  User[]
  assets Asset[]

  @@map("offices")
}

model Category {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String?
  type        AssetType
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  assets Asset[]

  @@map("categories")
}

model Asset {
  id          Int      @id @default(autoincrement())
  name        String
  code        String   @unique // Untuk plat nomor kendaraan atau kode kunci
  description String?
  categoryId  Int
  officeId    Int
  isAvailable Boolean  @default(true)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  category Category @relation(fields: [categoryId], references: [id])
  office   Office   @relation(fields: [officeId], references: [id])
  loans    Loan[]

  @@map("assets")
}

model Loan {
  id               Int        @id @default(autoincrement())
  assetId          Int
  userId           Int
  borrowerName     String
  borrowerPhone    String?
  purpose          String?
  loanDate         DateTime   @default(now())
  returnDate       DateTime?
  actualReturnDate DateTime?
  status           LoanStatus @default(BORROWED)
  notes            String?
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt

  asset Asset @relation(fields: [assetId], references: [id])
  user  User  @relation(fields: [userId], references: [id]) // Security guard yang menginput

  @@map("loans")
}

enum Role {
  ADMIN
  SECURITY_GUARD
}

enum AssetType {
  VEHICLE
  ROOM_KEY
}

enum LoanStatus {
  BORROWED
  RETURNED
  OVERDUE
}
